# Environment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# GitHub Configuration
# ============================================
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_REPO=gmedeirosnet/CI.CD
GITHUB_BRANCH=main

# ============================================
# Harbor Registry Configuration
# ============================================
HARBOR_REGISTRY=localhost:8082
HARBOR_PROJECT=cicd-demo
HARBOR_ADMIN_USER=admin
HARBOR_ADMIN_PASSWORD=Harbor12345
HARBOR_ROBOT_NAME=robot-ci-cd-demo
HARBOR_ROBOT_SECRET=

# ============================================
# Jenkins Configuration
# ============================================
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_PASSWORD=
JENKINS_API_TOKEN=

# ============================================
# SonarQube Configuration
# ============================================
SONAR_HOST=http://localhost:9000
SONAR_TOKEN=
SONAR_PROJECT_KEY=cicd-demo
SONAR_PROJECT_NAME=CI/CD Demo

# ============================================
# Kubernetes Configuration
# ============================================
KUBE_CONTEXT=kind-app-demo
KUBE_NAMESPACE=app-demo
KUBE_CONFIG_PATH=~/.kube/config

# ============================================
# Kind (Kubernetes in Docker) Configuration
# ============================================
KIND_CLUSTER_NAME=app-demo
KIND_WORKER_NODES=2

# ============================================
# ArgoCD Configuration
# ============================================
ARGOCD_SERVER=localhost:8080
ARGOCD_NAMESPACE=argocd
ARGOCD_ADMIN_PASSWORD=
ARGOCD_APP_NAME=cicd-demo

# ============================================
# Docker Configuration
# ============================================
DOCKER_REGISTRY=${HARBOR_REGISTRY}
DOCKER_USERNAME=${HARBOR_ADMIN_USER}
DOCKER_PASSWORD=${HARBOR_ADMIN_PASSWORD}

# ============================================
# Application Configuration
# ============================================
APP_NAME=cicd-demo
APP_VERSION=1.0.0-SNAPSHOT
APP_PORT=8080
IMAGE_NAME=${HARBOR_REGISTRY}/${HARBOR_PROJECT}/app
IMAGE_TAG=latest

# ============================================
# Maven Configuration
# ============================================
MAVEN_OPTS=-Xmx1024m
MAVEN_SKIP_TESTS=false

# ============================================
# Ansible Configuration
# ============================================
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_INVENTORY=./ansible/inventory.ini

# ============================================
# Helm Configuration
# ============================================
HELM_CHART_NAME=cicd-demo
HELM_CHART_PATH=./helm-charts/cicd-demo
HELM_RELEASE_NAME=cicd-demo

# ============================================
# Network Configuration
# ============================================
# Port mappings for local development
JENKINS_PORT=8080
HARBOR_HTTP_PORT=8082
HARBOR_HTTPS_PORT=8443
SONARQUBE_PORT=9000
APP_PORT=8080
ARGOCD_HTTP_PORT=8080
ARGOCD_HTTPS_PORT=8443
